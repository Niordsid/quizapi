<div class="form-row">
  <h1>Question
    <%= @current + 1 %>
    of
    <%= @total %></h1>
</div>
<div class="form-row">
  <h3 id="question"><%= @question.text %></h3>
</div>
<div class="form-row">
  <%= form_tag({:controller => "quiz", :action => "answer"}) do %>
  <% @choices.each do |choice| %>
  <p class="choice">
    <%= radio_button_tag(:choice, choice.id) %>
    <%= label_tag("choice_".concat(choice.id.to_s).to_sym, choice.text) %>
  </p>
  <% end %>

  <div class="center">
    <%= submit_tag("Continue", :class => "btn btn-back") %>
  </div>
  <% end %>
</div>
<% content_for(:title) do %>
Question
<%= @current + 1 %>
of
<%= @total %>
<% end %>
